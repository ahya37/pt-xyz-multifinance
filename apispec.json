{
    "openapi": "3.0.3",
    "info": {
        "title": "Customer RESTfull API",
        "description": "API Spec untuk Konsumen",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api"
        }
    ],
    "paths": {
        "/customers": {
            "get": {
                "security": [{
                    "CustomerAuth":[]
                }],
                "tags": [
                    "Customer API"
                ],
                "description": "List all Customer",
                "summary": "List all Customer",
                "responses": {
                    "200": {
                        "description": "Success get all Customer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Customer"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [{
                    "CustomerAuth":[]
                }],
                "tags": [
                    "Customer API"
                ],
                "description": "Create new Customer",
                "summary": "Create new Customer",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOrUpdateCustomer"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success create Customer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Customer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/customers/{customerId}": {
            "get": {
                "security": [{
                    "CustomerAuth":[]
                }],
                "tags": [
                    "Customer API"
                ],
                "summary": "Get customer by Id",
                "description": "Get customer by Id",
                "parameters": [
                    {
                        "name": "customerId",
                        "in": "path",
                        "description": "Customer Id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success get customer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Customer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "security": [{
                    "CustomerAuth":[]
                }],
                "tags": [
                    "Customer API"
                ],
                "summary": "Update customer by Id",
                "description": "Update customer by Id",
                "parameters": [
                    {
                        "name": "customerId",
                        "in": "path",
                        "description": "Customer Id"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOrUpdateCustomer"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success get customer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Customer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "security": [{
                    "CustomerAuth":[]
                }],
                "tags": [
                    "Customer API"
                ],
                "summary": "Delete customer by Id",
                "description": "Delete customer by Id",
                "parameters": [
                    {
                        "name": "customerId",
                        "in": "path",
                        "description": "Customer Id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success delete customer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "CustomerAuth":{
                "type": "apiKey",
                "in": "header",
                "name": "X-API-KEY",
                "description": "Authenticstion for Customer API"
            }
        },
        "schemas": {
            "CreateOrUpdateCustomer": {
                "type": "object",
                "properties": {
                    "nik": {
                        "type": "string"
                    },
                    "full_name": {
                        "type": "string"
                    },
                    "legal_name": {
                        "type": "string"
                    },
                    "tempat_lahir": {
                        "type": "string"
                    },
                    "tanggal_lahir": {
                        "type": "string"
                    },
                    "gaji": {
                        "type": "number"
                    },
                    "foto_ktp": {
                        "type": "string"
                    },
                    "foto_selfie": {
                        "type": "string"
                    }
                }
            },
            "Customer": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "nik": {
                        "type": "string"
                    },
                    "full_name": {
                        "type": "string"
                    },
                    "legal_name": {
                        "type": "string"
                    },
                    "tempat_lahir": {
                        "type": "string"
                    },
                    "tanggal_lahir": {
                        "type": "string"
                    },
                    "gaji": {
                        "type": "number"
                    },
                    "foto_ktp": {
                        "type": "string"
                    },
                    "foto_selfie": {
                        "type": "string"
                    }
                }
            }
        }
    }
}